@model GestionProjects.Domain.Models.DemandeProjet

<div class="modal fade" id="renvoyerDMModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: var(--radius-xl); border: none; box-shadow: var(--shadow-xl);">
            <form asp-action="RenvoyerAuDMDSI" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header" style="border-bottom: 1px solid var(--gray-200); padding: var(--spacing-lg); background: #dbeafe;">
                    <h5 class="modal-title" style="font-weight: 600; color: #1e40af; display: flex; align-items: center; gap: var(--spacing-sm);">
                        <i class="bi bi-arrow-left-circle-fill" style="color: var(--info);"></i>
                        Renvoyer au Directeur Métier
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="padding: var(--spacing-lg);">
                    <p style="color: var(--gray-600); margin-bottom: var(--spacing-lg);">
                        La demande sera renvoyée au Directeur Métier pour révision. Il pourra la revalider ou demander des corrections au demandeur.
                    </p>
                    <div class="form-group-modern">
                        <label class="form-label-modern">Commentaire *</label>
                        <textarea name="commentaire" class="form-control-modern" rows="4" required placeholder="Indiquez les raisons du renvoi..."></textarea>
                    </div>
                </div>
                <div class="modal-footer" style="border-top: 1px solid var(--gray-200); padding: var(--spacing-lg);">
                    <button type="button" class="btn-modern btn-modern-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i>
                        Annuler
                    </button>
                    <button type="submit" class="btn-modern btn-modern-info">
                        <i class="bi bi-arrow-left"></i>
                        Renvoyer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
